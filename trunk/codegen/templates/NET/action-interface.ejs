using System;

namespace EngineericaApi.<%= app.Name %>
{
	/// <summary>
	/// Contains access to all the actions related to <%= ClassName %>s.
	/// </summary>
	public partial class <%- ClassName %> : ActionSet
	{
		<% IterateParams = RequiredParameters %>
		/// <summary>
		/// <%= Name %><%- requiresAuth ? ".  This action requires authentication." : "" %>
		/// </summary>
<%- include helpers/functionparam-doc %>
		public ActionResult <%= FunctionName %>(<%- include helpers/functionparam %>)
		{
			<%- requiresAuth ? "EnsureIsAuthenticated();" : "" %>
			return ExecuteActionInternal(ConnectionInformation.<%- app.Name %>, "<%- CommandName %>", new {<%- include helpers/functionparam-call %>});
		}

		<% if (OptionalParameters.length > 0) { 
			IterateParams = AllParams; %>
		/// <summary>
		/// <%= Name %>
		/// </summary>
<%- include helpers/functionparam-doc %>
		public ActionResult <%= FunctionName %>(<%- include helpers/functionparam %>)
		{
			<%- requiresAuth ? "EnsureIsAuthenticated();" : "" %>
			return ExecuteActionInternal(ConnectionInformation.<%- app.Name %>, "<%- CommandName %>", new {<%- include helpers/functionparam-call %>});
		}

		<% } %>

	}
}


